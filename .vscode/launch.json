{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "filesystem",
            "type": "pickString",
            "description": "Choose the gtest filters:",
            "options": [
                "*"
            ]
        },
        {
            "id": "calculator",
            "type": "pickString",
            "description": "Choose the gtest filters:",
            "options": [
                "*"
            ]
        },
        {
            "id": "dbconnection",
            "type": "pickString",
            "description": "Choose the gtest filters:",
            "options": [
                "*"
            ]
        }
    ],
    "configurations": [
        {
            "name": "(Win) filesystem",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/src/filesystem/filesystem.exe",
            "args": [
                "--gmock_verbose=warning",
                "--gtest_filter=${input:filesystem}",
                "--stderr"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        },
        {
            "name": "(Linux) filesystem",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/bin/filesystem",
            "args": [
                "--gmock_verbose=warning",
                "--gtest_filter='${input:filesystem}'",
                "--stderr"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerArgs": "-x ${workspaceFolder}/build/.gdbinit",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "targetArchitecture": "x64",
            "linux": {
                "miDebuggerPath": "/usr/bin/gdb"
            }
        },
        {
            "name": "(Linux) calculator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/bin/calculator",
            "args": [
                "--gmock_verbose=warning",
                "--gtest_filter='${input:calculator}'",
                "--stderr"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerArgs": "-x ${workspaceFolder}/build/.gdbinit",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "targetArchitecture": "x64",
            "linux": {
                "miDebuggerPath": "/usr/bin/gdb"
            }
        },
        {
            "name": "(Linux) dbconnection",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/bin/dbconnection",
            "args": [
                "--gmock_verbose=warning",
                "--gtest_filter='${input:dbconnection}'",
                "--stderr"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerArgs": "-x ${workspaceFolder}/build/.gdbinit",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "targetArchitecture": "x64",
            "linux": {
                "miDebuggerPath": "/usr/bin/gdb"
            }
        }
    ]
}